<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://documentum.emc.com/2010/UI-Model"
        id="ctmValueDisplay" xtype="ctmValueDisplay" version="1.0.0000.001">

    <name>Custom Value Display</name>
    <description>Display the label and read-only value of an attribute.</description>

    <dependencies>
        <dependency componentId="xcp_value_display"/>
    </dependencies>
    
    <icon src="icons/valuedisplay_24_wig.png" width="24" height="24" />
    <icon src="icons/valuedisplay_wig.png" width="16" height="16" />

    <content src="content/xcpmi/widgets/form/ctmValueDisplay.js" type="text/javascript"/>
    <content src="content/xcpmi/widgets/form/ctmValueDisplayDesigner.js" type="text/javascript" mode="design"/>

    <category>xcpPalette:Custom</category>
    
    <configuration>
        <databound name="value" eventBased="true">
			<label>Initial Value</label>
            <actionLabelForEvent>${ActionLabelForValue}</actionLabelForEvent>
            <type>EXPRESSION</type>
            <expression>
                <setterFunName>setValue</setterFunName>
                <contextTree>
                	<include>PRIMARY_CONTEXT</include>
                	<include>APP_CONTEXT</include>
                	<include>WIDGET_CONTEXT</include>
                	<include>DATASOURCE_OUTPUT</include>
                	<include>SINGLE_OBJECT_DATA_SERVICE_OUTPUT</include>
                    <include>UI_EVENTS</include>
                    <include>SESSION_PARAMETERS</include>
                    <include>FRAGMENT_INPUT</include>
                </contextTree>
                <evaluateInitialOnly>true</evaluateInitialOnly>
            </expression>
        </databound>

        <propertyInfo name="debug">
        	<label>Debug</label>
        	<type>BOOLEAN</type>
        	<defaultvalue>true</defaultvalue>
        </propertyInfo>

        <propertyInfo name="fieldLabel" localizable="true">
            <label>Label</label>
            <type>STRING</type>
			<defaultvalue>Label</defaultvalue>
			<constraint>
	            <validator type="maxLength" maxLength="60"/>
            </constraint>
        </propertyInfo>
        <propertyInfo name="valueType">
        	<label>Data type</label>
            <type>STRING</type>
            <defaultvalue>STRING</defaultvalue>
        </propertyInfo>
		 <propertyInfo name="isRepeating">
        	<label>Has multiple values</label>
            <type>BOOLEAN</type>
            <defaultvalue>false</defaultvalue>
        </propertyInfo>
        <propertyInfo name="name">
            <type>STRING</type>
        </propertyInfo>
		<propertyInfo name="format">
			<label>Format</label>
			<type>OBJECT</type>
		</propertyInfo>
		<propertyInfo name="cls">
			<label>CSS Class</label>
			<type>STRING</type>
		</propertyInfo>
		<propertyInfo name="repeatingAttributeFormat">
            <label>Repeating Attribute Format</label>
            <type>OBJECT</type>
        </propertyInfo>
        <propertyInfo name="hstretch">
            <type>BOOLEAN</type>
        </propertyInfo>
        <propertyInfo name="store" hidden="true">
            <type>STRING</type>
        </propertyInfo>
        <propertyInfo name="hidden" eventBased="true">
            <label>Hidden when</label>
            <actionLabelForEvent>${ActionLabelForHide}</actionLabelForEvent>
            <type>EXPRESSION</type>
            <expression>
                <setterFunName>setHidden</setterFunName>
                <valueType>BOOLEAN</valueType>
                <contextTree>
                    <include>PRIMARY_CONTEXT</include>
                    <include>APP_CONTEXT</include>
                    <include>WIDGET_CONTEXT</include>
                    <include>SINGLE_OBJECT_DATA_SERVICE_OUTPUT</include>
                    <include>UI_EVENTS</include>
                    <include>SESSION_PARAMETERS</include>
                    <include>FRAGMENT_INPUT</include>
                </contextTree>
                <disableProcessingOnRender>true</disableProcessingOnRender>
                <initialDefaultExprValue>true</initialDefaultExprValue>
            </expression>
        </propertyInfo>
    </configuration>
    <expressionProperties>
        <propertyInfo name="value">
            <label>Value</label>
            <type>STRING</type>
            <getterFun>
                <name>this.getValueFromWidget</name>
                <arguments>
                    <argument>EVALUATION_CONTEXT</argument>
                    <argument>WIDGET_ID</argument>
                    <argument>PROPERTY_ID</argument>
                </arguments>
            </getterFun>
            <changeEvents>
                <eventInfo name="change"/>
            </changeEvents>
        </propertyInfo>
    </expressionProperties>
    <events>
        <eventInfo name="change"/>
        <eventInfo name="focus"/>
        <eventInfo name="blur"/>
        <eventInfo name="hide"/>
        <eventInfo name="show"/>
        <eventInfo name="disable"/>
        <eventInfo name="enable"/>
    </events>
</widget>
